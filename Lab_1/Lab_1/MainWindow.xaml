<Window x:Class="Lab_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="K-means" MinHeight="450" MinWidth="800" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Canvas Grid.Column="0" Margin="5" Background="White" Name="Canvas">

        </Canvas>
        <GroupBox Grid.Column="1" Margin="0, 0, 5, 5" Header="Settings">
            <StackPanel Margin="5">
                <Label Content="Number of shapes:" Padding="0"/>
                <TextBox Name="TbNumberOfShapes"/>
                <Label Content="Number of classes:" Padding="0" Margin="0, 5, 0, 0"/>
                <TextBox Name="TbNumberOfClasses"/>
                <Button Margin="0, 10, 0, 0">Execute the K-Means algorithm</Button>
                <Button Margin="0, 5, 0, 0">Clean</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>